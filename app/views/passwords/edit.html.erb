<%= render layout: "containers/panel", locals: { title: t(".title") } do %>
  <%= form_for :password_reset,
                url: user_password_path(@user, token: @user.confirmation_token),
                html: { method: :put } do |f|%>
      <div class="-space-y-px rounded-md shadow-sm">
        <div>
          <%= f.label :password, class: "sr-only" %>
          <%= render "shared/fields/password", form: f %>
        </div>
      </div>
      <div>
        <%= f.button type: :submit, class: %w[group
                                              relative
                                              flex
                                              w-full
                                              justify-center
                                              rounded-md
                                              border
                                              border-transparent
                                              bg-indigo-600
                                              py-2
                                              px-4
                                              text-sm
                                              font-medium
                                              text-white
                                              hover:bg-indigo-700
                                              focus:outline-none
                                              focus:ring-2
                                              focus:ring-indigo-500
                                              focus:ring-offset-2"] do %>
          <span class="absolute
                      inset-y-0
                      left-0 flex
                      items-center
                      pl-3">
          </span>
          <%= t('helpers.submit.password_reset.submit') %>
        <% end %>
      </div>
  <% end %>
<% end %>
